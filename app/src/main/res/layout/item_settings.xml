<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="12dp"
    android:background="@color/purple_500"
    >

    <ImageView
        android:id="@+id/item_settings_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_wifi"
        android:padding="12dp"
        />
    <TextView
        android:id="@+id/item_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/item_settings_icon"
        app:layout_constraintTop_toTopOf="@id/item_settings_icon"
        tools:text="Network and internet"
        android:textSize="24sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/item_settings_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/item_settings_icon"
        app:layout_constraintTop_toBottomOf="@id/item_settings_title"
        tools:text="Network and internet"
        android:textSize="18sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>